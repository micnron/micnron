    <script>
        document.querySelectorAll('.opcao').forEach(button => {
            button.addEventListener('click', () => {
                if (button.id === 'presencial') {
                    document.getElementById('local-container').classList.remove('hidden');
                } else if (button.id === 'remoto') {
                    document.getElementById('local-container').classList.add('hidden');
                }
                button.classList.toggle('selected');
            });
        });
    </script>
